<section class="login-area ptb-50">
  <div class="container">
    <div class="login-form">
      <h2>تغییر رمز عبور</h2>
      <%- include("./includes/loginMessage.ejs") %>
      <form action="/users/reset-password/<%= userId %>" method="POST">
        <div class="form-group">
          <label>کلمه عبور</label>
          <input
            type="password"
            name="password"
            class="form-control"
            name="password"
          />
        </div>

        <div class="form-group">
          <label>تکرار کلمه عبور</label>
          <input type="password" class="form-control" name="confirmPassword" />
        </div>

        <button type="submit">تغییر رمز عبور</button>
      </form>
      <div class="important-text">
        <p>اکانت نداری ؟ <a href="/users/register">ثبت نام کن !</a></p>
      </div>
    </div>
  </div>
</section>
