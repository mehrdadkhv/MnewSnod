<div class="d-xl-flex justify-content-between align-items-start">
  <h2 class="text-dark font-weight-bold mb-2">صفحه اصلی</h2>
  <div class="d-sm-flex justify-content-xl-between align-items-center mb-2">

    <div class="dropdown ml-0 ml-md-4 mt-2 mt-lg-0">
      <button class="btn bg-white dropdown-toggle p-3 d-flex align-items-center" type="button" id="dropdownMenuButton1"
        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <i class="mdi mdi-calendar mr-1"></i>24 Mar 2019 - 24 Mar 2019
      </button>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton1">
        <h6 class="dropdown-header">Settings</h6>
        <a class="dropdown-item" href="#">Action</a>
        <a class="dropdown-item" href="#">Another action</a>
        <a class="dropdown-item" href="#">Something else here</a>
        <div class="dropdown-divider"></div>
        <a class="dropdown-item" href="#">Separated link</a>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="d-sm-flex justify-content-between align-items-center transaparent-tab-border {">
      <ul class="nav nav-tabs tab-transparent" role="tablist">
        <li class="nav-item">
          <a class="nav-link" id="allposts-tab" data-toggle="tab" href="#allposts-1" role="tab"
            aria-selected="true">تمام پست ها</a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" id="business-tab" data-toggle="tab" href="#business-2" role="tab"
            aria-selected="false">اخرین تویت ها</a>
        </li>


      </ul>

    </div>
    <div class="tab-content tab-transparent-content">
      <div class="tab-pane fade active" id="allposts-1" role="tabpanel" aria-labelledby="allposts-tab">
        <div class="row">
          <% if(blogs.length> 0){ %>
            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Inverse table</h4>
                  <p class="card-description">All post <code><%= fullname  %> </code></p>
                  <table class="table table-dark">
                    <thead>
                      <tr>
                        <th>#</th>
                        <th>عنوان</th>
                        <th>تاریخ</th>
                        <th>وضعیت</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for(let blog of blogs) {%>
                        <tr>
                          <td>1</td>
                          <td>
                            <a href="/blogs/<% blog._id %>" class="text-white">
                              <%= blog.title %>
                          </td>
                          <td>
                            <%= formatDate(blog.createdAt) %>
                          </td>
                          <td>

                            <label class="badge <%= blog.status == " عمومی" ? 'badge-success' : 'badge-danger' %> ">
                              <%= blog.status %>
                            </label>

                          </td>
                          <td>
                            <a href="/dashboard/edit-post/<%= blog._id %>" class="btn btn-sm btn-info">ویرایش</a>
                            <a href="/dashboard/delete-post/<%= blog._id %>" class="btn btn-sm btn-danger">حذف</a>
                          </td>
                        </tr>
                        <% } %>
                    </tbody>
                  </table>

                </div>
                <%- include('../includes/pagination.ejs') %>
              </div>
            </div>
            <% } else { %>

              <div class="card-body">
                <h4 class="card-title">Center aligned media</h4>
                <div class="media">
                  <i class="mdi mdi-earth icon-md text-info d-flex align-self-center mr-3"></i>
                  <div class="media-body">
                    <p class="card-text text-danger">Es gibt keine anzuzeigenden Beiträge</p>
                  </div>
                </div>
              </div>

              <% } %>

        </div>
      </div>


      <div class="tab-pane fade active" id="business-2" role="tabpanel" aria-labelledby="business-tab">
        <div class="row">
          <h2>busnist</h2>
        </div>
      </div>
      
    </div>
