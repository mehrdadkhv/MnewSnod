<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
            <p class="card-description">All post <code> </code></p>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>عنوان</th>
                        <th>تاریخ</th>
                        <th>وضعیت</th>
                        <th>دسته بندی</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let article of articles) {%>

                        <tr>
                            <td>1</td>
                            <td>
                                <a href="/articles/<% article._id %>" class="text-white">
                                    <%= article.title %>
                            </td>
                            <td>
                                <a href="/articles/<% article._id %>" class="text-white">
                                    <%= article.summary %>
                            <td>

                                <td>
                                    <a href="/dashboard/categories/<%=JSON.parse(JSON.stringify(article.category))?.slug %>" class="text-white">
                                        <%# console.log(JSON.parse(JSON.stringify(article.category))[0]?.title); %> 
                                     
                                        <%=JSON.parse(JSON.stringify(article.category))[0]?.title %>
                                <td>

                                <a href="/dashboard/edit-article/<%= article._id %>"
                                    class="btn btn-sm btn-info">ویرایش</a>
                                <a href="/dashboard/articles/<%= article._id %>"
                                    class="btn btn-sm btn-danger">حذف</a>
                            </td>
                            
                        </tr>
                        <% } %>
                </tbody>

            </table>
            <%- include('../../includes/pagination.ejs')  %> 
        </div>

    </div>
</div>