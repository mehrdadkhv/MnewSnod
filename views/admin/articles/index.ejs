<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Inverse table</h4>
            <p class="card-description">All post <code><%= fullname  %> </code></p>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>عنوان</th>
                        <th>تاریخ</th>
                        <th>وضعیت</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let article of articles) {%>
                        <tr>
                            <td>1</td>
                            <td>
                                <a href="/articles/<% article._id %>" class="text-white">
                                    <%= article.title %>
                            </td>
                            <td>
                                <a href="/articles/<% article._id %>" class="text-white">
                                    <%= article.summary %>
                            <td>
                            <td>
                                <a href="/articles/<% article._id %>" class="text-white">
                                    <%= article.description %>
                            <td>
                                <td>
                                    <a href="/articles/<% category._id %>" class="text-white">
                                        <%= category.description %>
                                <td>
                                <a href="/dashboard/edit-article/<%= article._id %>"
                                    class="btn btn-sm btn-info">ویرایش</a>
                                <a href="/dashboard/delete-article/<%= article._id %>"
                                    class="btn btn-sm btn-danger">حذف</a>
                            </td>
                        </tr>
                        <% } %>
                </tbody>
            </table>

        </div>

    </div>
</div>